<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/fach_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fach_label" />

    <TextView
        android:id="@+id/fach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/fach_label" />

    <TextView
        android:id="@+id/noten_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fach_label"
        android:text="@string/noten_label" />

    <TextView
        android:id="@+id/note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fach"
        android:layout_toRightOf="@+id/noten_label" />

    <TextView
        android:id="@+id/datum_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noten_label"
        android:text="@string/d_label" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noten_label"
        android:layout_toRightOf="@+id/datum_label" />


</RelativeLayout>